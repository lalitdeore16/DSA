def heapify(arr, n, i):
    """
    Maintains the max-heap property for the subtree rooted at index i.
    n: size of heap
    i: current index
    """
    largest = i        # Initialize largest as root
    left = 2 * i + 1   # left child
    right = 2 * i + 2  # right child

    # If left child is greater than root
    if left < n and arr[left] > arr[largest]:
        largest = left

    # If right child is greater than largest so far
    if right < n and arr[right] > arr[largest]:
        largest = right

    # If largest is not root
    if largest != i:
        arr[i], arr[largest] = arr[largest], arr[i]  # Swap
        # Recursively heapify the affected subtree
        heapify(arr, n, largest)


def heap_sort(arr):
    """
    Function to perform Heap Sort on array arr.
    Sorts the array in ascending order using max-heap.
    """
    n = len(arr)

    # Step 1: Build a max heap
    for i in range(n // 2 - 1, -1, -1):
        heapify(arr, n, i)

    # Step 2: Extract elements one by one
    for i in range(n - 1, 0, -1):
        arr[i], arr[0] = arr[0], arr[i]  # Move current root to end
        heapify(arr, i, 0)               # Heapify the reduced heap


# Example demonstration
if __name__ == "__main__":
    arr = [12, 11, 13, 5, 6, 7]
    print("Original array:")
    print(arr)

    heap_sort(arr)

    print("\nSorted array in ascending order:")
    print(arr)
