#include <iostream>
using namespace std;

class CircularQueue {
private:
    int front, rear, size;
    int* queue;

public:
    CircularQueue(int s) {
        front = -1;
        rear = -1;
        size = s;
        queue = new int[size];
    }

    // 1. Insertion (Enqueue)
    void enqueue(int value) {
        if ((front == 0 && rear == size - 1) || (rear == (front - 1 + size) % size)) {
            cout << "Queue is Full! Cannot insert " << value << endl;
            return;
        }

        if (front == -1) {  // First element insertion
            front = rear = 0;
            queue[rear] = value;
        }
        else if (rear == size - 1 && front != 0) {
            rear = 0;
            queue[rear] = value;
        }
        else {
            rear++;
            queue[rear] = value;
        }
        cout << value << " inserted into queue.\n";
    }

    // 2. Deletion (Dequeue)
    void dequeue() {
        if (front == -1) {
            cout << "Queue is Empty! Cannot delete.\n";
            return;
        }

        cout << queue[front] << " deleted from queue.\n";

        if (front == rear) {
            front = rear = -1;  // Queue becomes empty
        }
        else if (front == size - 1) {
            front = 0;
        }
        else {
            front++;
        }
    }

    // 3. Display
    void display() {
        if (front == -1) {
            cout << "Queue is Empty!\n";
            return;
        }

        cout << "Queue elements are: ";
        if (rear >= front) {
            for (int i = front; i <= rear; i++)
                cout << queue[i] << " ";
        } else {
            for (int i = front; i < size; i++)
                cout << queue[i] << " ";
            for (int i = 0; i <= rear; i++)
                cout << queue[i] << " ";
        }
        cout << endl;
    }

    ~CircularQueue() {
        delete[] queue;
    }
};

// Example usage (you can comment this part if not needed)
int main() {
    CircularQueue q(5);

    q.enqueue(10);
    q.enqueue(20);
    q.enqueue(30);
    q.enqueue(40);
    q.enqueue(50);
    q.display();

    q.dequeue();
    q.dequeue();
    q.display();

    q.enqueue(60);
    q.enqueue(70);
    q.display();

    return 0;
}
